<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintcolor"
    tools:context=".FindFriendsActivity">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/simpleTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:text="Search for People, Parents and Friends from School "
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/search_box_input"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_below="@id/simpleTextID"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_whats_on_your_mind"
            android:ems="10"
            android:hint="search here..."
            android:inputType="textMultiLine"
            android:padding="10dp" />
        <ImageButton
            android:id="@+id/search_people_friends_button"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/simpleTextID"
            android:layout_toEndOf="@id/search_box_input"
            android:background="@drawable/add_image_button_shape"
            android:src="@drawable/ic_search_black_24dp"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_result_list"
        android:layout_alignParentStart="true"
        android:layout_below="@id/myLayout"
        android:layout_margin="10dp"
        >

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>