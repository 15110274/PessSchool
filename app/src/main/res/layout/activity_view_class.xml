<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/class_name"
            android:paddingTop="10dp"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_child"
            android:paddingLeft="20dp"
            android:text="Tên lớp: "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/teacher"
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_gender"
            android:paddingLeft="20dp"
            android:text="Giáo viên: "
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dob"
            android:paddingLeft="20dp"
            android:text="Số album ảnh: "
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dob"
            android:paddingLeft="20dp"
            android:text="Số bài viết: "
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dob"
            android:paddingLeft="20dp"
            android:text="Số đơn xin phép: "
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dob"
            android:paddingLeft="20dp"
            android:text="Số phụ huynh: "
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingStart="50dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dob"
            android:paddingLeft="20dp"
            android:text="Số học sinh: "
            android:textStyle="bold" />


        <Button
            android:id="@+id/edit_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonprofile"
            android:text="Edit Class"
            android:textColor="#fff" />


    </LinearLayout>



</ScrollView>