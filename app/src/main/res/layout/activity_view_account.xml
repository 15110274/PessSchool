<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gradienbackground"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_person_black_50dp" />

            <TextView
                android:id="@+id/person_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Full Name"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/person_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_full_name"
                android:text="User Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="18dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_username"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/person_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_gender"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Tên lớp: "
            android:textColor="@color/textcolor"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/relationship_with_children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_child"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Phụ huynh của: "
            android:textColor="@color/textcolor"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/person_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_dob"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Sinh nhật"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />






        <TextView
            android:id="@+id/person_class1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_gender"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Tên lớp: "
            android:textColor="@color/textcolor"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/relationship_with_children1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_child"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Phụ huynh của: "
            android:textColor="@color/textcolor"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/person_birthday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_dob"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Sinh nhật"
            android:textColor="@color/textcolor"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Số điện thoại"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Email"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_role"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:paddingStart="50dp"
            android:paddingLeft="20dp"
            android:text="Tài khoản"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonprofile"
            android:text="Sửa tài khoản"
            android:textColor="#fff" />


    </LinearLayout>


</ScrollView>